<div class="container">
    <% if user_signed_in? %>
    <div class="row">
        <div class="col-9">
            <br>
            <div style="flex-direction: row; display: flex;">
                <h4 style="font-weight: 800; padding-right: 20px;"> Pubnet</h4> 
                <div class="input-group rounded" style="width: 70%">
                  <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                  aria-describedby="search-addon" />
              </div>
              <svg xmlns="http://www.w3.org/2000/svg" style="margin-left: 20; margin-top: 5" width="25" height="25" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                  <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
              </svg>
              <h5 style="padding: 5px">Option</h5>
          </div>
          <br><br>
          <div class="d-flex justify-content-around">
              <%= link_to "投稿", root_path,     :class => "btn btn-light", :style => "color: black" %>
              <%= link_to "ユーザ", users_path, :class => "btn btn-dark", :style => "color: white" %>
          </div>
          <br><br>
          <div class="customAdminDiv">
              <h3 class="text-center" style="padding: 10px;"> ユーザ一覧</h1>

              <table class="table table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <th >ID</th>
                        <th>ニックネーム</th>
                        <th>アドレス</th>
                        <th>管理者？</th>
                        <th>投稿</th>
                        <th>コメント</th>
                        <th>リンク</th>
                        <th>アクション</th>
                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                    
                    <tr>
                        <td  class="textTable"><%= user.id %></td>
                        <td  class="textTable"><%= user.nickname %></td>
                        <td  class="textTable"><%= user.email %></td>
                        <td  class="textTable">
                            <%= user.is_admin %>
                            <% if current_user.id != user.id %>
                                <%= render "users/confirm_modal/edit", user: user %>
                                <button type="button" data-bs-toggle="modal" data-bs-target="#edit-confirm-modal" style="color: black; font-size: 25px; text-decoration: unset; background-color: white; border-width: 0;">
                                    編集
                                </button>
                            <% end %>
                        </td>
                            
                        <td  class="textTable"> null</td>
                        <td  class="textTable"> null </td>
                        <td  class="textTable"><%= "/user#{user.id}" %></td>
                        
                        <td>
                            <% if current_user.id != user.id %>
                            <%= link_to "削除", user_path(user),
                            method: :delete,
                            data: {confirm: "Are you sure?"}, :class => "btn btn-danger", :style => "color: white" %> 
                            <% end %>
                        </td>
                    </tr>

                <% end %>
            </tbody>
        </table>
        <%= link_to "追加", new_user_path, :class => "btn btn-warning", :style => "color: white" %>
    </div>
    <br>
    
</div>
<div class="col-3" style="background-color: #000000;">
    <%= render "devise/shared/leftlayout" %>
</div>
<div>
<%= render "devise/shared/modal" %>
</div>
<% end %>
</div>