<div class="col-sm-10" style="position: absolute; top: 30%">
  <div class="col-sm-6" style="display: flex; align-items: center; justify-content: center;">
    <h4 style="color: white">サインイン</h4>
  </div>
  <br>
  <div style="align-content: center; align-self: center; align-items: center; color: white; font-weight: 800;">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3 row" style="justify-content: center; color: white" >
      <label for="staticEmail" class="col-sm-2 col-form-label">メール</label>
      <div class="col-sm-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "padding-left: 10px" %>
      </div>
      <div class="col-sm-6"></div>
    </div>
    <div class="mb-3 row">
      <label for="staticEmail" class="col-sm-2 col-form-label"> パスワード</label>
      <div class="col-sm-4">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
      <div class="col-sm-6"></div>
    </div>
   <!--  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div> -->
    <% end %>
    <br>
    <div class="actions col-sm-6" style="display: flex; align-items: center; justify-content: center;">
    <%= f.submit "ログイン", class: "btn btn-warning" %>
  </div>
  <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>